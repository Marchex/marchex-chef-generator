<%= license_description('#') %>
<% if defined?(include_encrypted_data_bag_examples) -%>
# Load chef-vault in order to access encrypted data bag
include_recipe 'chef-vault'
# Load encrypted data bag
db_credentials = ChefVault::Item.load('<%= cookbook_name %>', 'database_credentials')

# Create file with secrets
template "/tmp/data_bag_secrets.conf" do
  owner     'root'
  group     'root'
  mode      '0400'
  sensitive true
  action    :create
  variables(  username: db_credentials['username'],
              password: db_credentials['password'] )
end
<% end -%>
