<%= license_description('#') %>

require 'spec_helper'

describe '<%= cookbook_name %>::<%= recipe_name %>' do
  context 'When all attributes are default, on an unspecified platform' do
    <% if defined?(include_encrypted_data_bag_examples) -%>
    require 'chef-vault'
    data_bag_name = '<%= cookbook_name %>'
    data_bag_item_id = 'database_credentials'
    # Populate expected data bag contents
    let(:data_bag_contents) do {
      "id"        => data_bag_item_id,
      "username"  => "my_super_secret_username",
      "password"  => "my_super_secret_password" }
    end
    <% end -%>
    let(:chef_run) do
      runner = ChefSpec::SoloRunner.new
      <% if defined?(include_encrypted_data_bag_examples) -%>
      allow(ChefVault::Item).to receive(:load).with(data_bag_name, data_bag_item_id).and_return(data_bag_contents)
      <% end -%>
      runner.converge(described_recipe)
    end

    it 'converges successfully' do
      expect { chef_run }.to_not raise_error
    end
    <% if defined?(include_encrypted_data_bag_examples) -%>
    it 'creates the super secret file successfully' do
      expect(chef_run).to create_template('/tmp/data_bag_secrets.conf').with(
        user:       'root',
        group:      'root',
        mode:       '0400',
        sensitive:  true
      )
      expect(chef_run).to render_file('/tmp/data_bag_secrets.conf').with_content { |content|
        expect(content).to include("username: #{data_bag_contents['username']}")
        expect(content).to include("password: #{data_bag_contents['password']}")
      }
    end
    <% end -%>
  end
end
