---
driver:
  name: vagrant

provisioner:
  name: chef_zero

platforms:
<%% %w(11.18.12 latest).each do |chef_version| %>
  - name: ubuntu-12.04-<%%= chef_version %>
    driver_config:
      box: u12-04-04032015-foo
      box_url: http://tools1.sad.marchex.com:8898/vm_images/u12-04-04032015-foo.box
      require_chef_omnibus: <%%= chef_version %>
  - name: centos-6.6-<%%= chef_version %>
    driver_config:
      box: opscode-centos-6.6
      box_url: https://opscode-vm-bento.s3.amazonaws.com/vagrant/virtualbox/opscode_centos-6.6_chef-provisionerless.box
      require_chef_omnibus: <%%= chef_version %>
<%% end %>

suites:
  - name: default
    run_list:
      - recipe[<%= cookbook_name %>::default]
    attributes:
