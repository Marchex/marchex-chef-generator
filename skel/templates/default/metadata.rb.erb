name '<%= cookbook_name %>'
maintainer 'Marchex Engineering'
maintainer_email 'tools-team@marchex.com'
license 'All Rights Reserved'
description 'Installs/Configures <%= cookbook_name %>'
long_description 'Installs/Configures <%= cookbook_name %>'
version '0.1.0'

chef_version '~> 12.0'
supports 'ubuntu', '>= 12.04'

# Specify version constraint for community cookbooks (not authored by marchex or checked in to https://github.marchex.com/marchex-chef)
# example:
# depends 'apt', '=> 2.9.2' # use 'greater than or equal to' version constraint operator unless you have a good reason not to
<%= "depends 'chef-vault', '=> 1.3.0'" if(defined?(context.include_chef_vault_examples) && (context.include_chef_vault_examples == 'true')) -%>

# DO NOT specify version constraints for marchex-authored cookbooks, just use 'depends' - version control is provided by Chef environments
# example:
depends 'mchx_chef_helpers'
<% if defined?(role_cookbook_dependencies) -%>
<%= role_cookbook_dependencies.map{ |d| "depends '#{d[:cookbook_name]}'" }.join("\n") %>
<% end -%>

issues_url 'https://jira.marchex.com'
source_url 'https://github.marchex.com/marchex-chef/<%= cookbook_name %>'
